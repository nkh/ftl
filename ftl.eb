ext_bindings()
{
# incremental search, binding: b
((inc_search)) && case "${REPLY: -1}" in '') inc_search=0 ; cursor_color='\e[7;34m' ; list ;; *) to_search="$to_search$REPLY" ; ffind n ; esac && return

case "${REPLY: -1}" in
	b  ) to_search= ; inc_search=1 ; cursor_color='\e[7;35m' ; list ;;
	*  ) false ;;
esac
}



