
# shortcut: leader + s
declare -Ag leader_key_map
leader_key() { key_map=leader_key_map ; }

leader_key_map[s]=shred_command
shred_command() { prompt "shred ${#selection[@]} entries [yes|N]" ; [[ $REPLY == yes ]] && echo "shred -n 2 -z ${selection[@]}" ; cdir ; false ; }

#add line at end of help file

#add to command list
shortcuts[shred]="leader_key+s"

# vim: set filetype=bash :

