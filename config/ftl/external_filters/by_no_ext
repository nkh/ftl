declare -g -A fnexts=()

for ext in $(for i in * ; do [[ -f "$i" ]] && [[ "$i" =~ '.' ]] && echo ".${i##*.}" ; done | \
		sort -u | lscolors | fzf-tmux -p 30% -m --ansi --info=inline --layout=reverse)
	do 
		fnexts[$ext]=1
		filter_tag="~"
	done

ftl_filter()
{
while read -r file_data
	do
		fn="${file_data#$'*\t'*$'\t'}" ; ext= ; [[ "$fn" =~ '.' ]] && ext=".${fn##*.}"
		{ [[ -d "$fn" ]] || [[ -z "$ext" ]] || [[ -z "${fnexts[$ext]}" ]] ; } && echo "$file_data"
	done
}

# vim: set filetype=sh :
