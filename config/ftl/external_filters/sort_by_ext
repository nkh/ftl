sort_glyph() { echo e ; }
ftl_sort()
{
entry=0

while read -r file_data
	do
		fe="${file_data#$'*\t'*$'\t'}" ; names+=("$fe") ; ext= ; [[ "$fe" =~ '.' ]] && ext=".${fe##*.}"
		s=${file_data%$'\t'*$'\t'*} ; sizes+=($s)
		sort_data+=("$entry	$fe	$ext") ; ((entry++))
	done

#printf "%s\n" "${sort_data[@]}" | sort -t $'\t' ${reversed[tab]} -k3 -k2 | cut -f1 | { while read i ; do echo ${sizes[i]} >&6 ; echo "${names[i]}" ; done ; }
#printf "%s\n" "${sort_data[@]}" | sort -t $'\t' ${reversed[tab]} -k3 -k2 | cut -f1 | { while read i ; do echo "$i" >> ftl_indexes ; echo "${sizes[i]}" >>ftl_sizes ; echo "${names[i]}" >>ftl_names ; done ; }
for i in $(printf "%s\n" "${sort_data[@]}" | sort -t $'\t' ${reversed[tab]} -k3 -k2 | cut -f1) ; do echo ${sizes[i]} >&6 ; echo "${names[i]}" ; done
}

