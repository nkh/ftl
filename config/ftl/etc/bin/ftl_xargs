#!/bin/bash
# ftl_xargs command [command args]

source $ftl_info_file # to get FTL_PID

index=0
for i in "${selection[@]}" 
	do
	
	((index++))

	{
	echo "echo -e '\e[2;33m[$(date -R)] $PWD\n\e[0;33mftl_xargs> $@ ${i@Q}\e[m'"
	echo "$@" "${i@Q}"
	echo "echo -e \"\n\e[2;33mExit code: \$?\e[m\""
	} >$FTL_FS/ftl_xargs_$$_$index && tmux send -t ftl${FTL_PID}:ftl${FTL_PID}_bash ". $FTL_FS/ftl_xargs_$$_$index" C-m
	
	sleep 0.05
	done

# vim: set filetype=bash :

