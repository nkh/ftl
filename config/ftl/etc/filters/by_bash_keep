bash_filter_keep_imp()
{
got_filter=1

tcpreview ; inotify_k

tmp_ftl_files="$(mktemp ftl_to_keep_XXXXXXX)" ; : >$tmp_ftl_file

run_bash

[[ -s "${tmp_ftl_files}" ]] &&
	{
	got_filter=0
	
	OIFS=$IFS ; IFS=$'\n'
	<"${tmp_ftl_files}" readarray -t keep_files
	IFS=$OIFS
	
	declare -g -A keep PWDS
	tags_clear
	
	for p in "${keep_files[@]}" 
		do 
			ftag="~"
			real_path="$(realpath "$p")"
			
			keep["$tab-$real_path"]=1
			
			real_path="$(dirname "$real_path")"
			
			while [[ "$real_path" ]]
				do
					keep[$tab-$real_path]=1
					PWDS[$tab-$real_path]=1
					
					[[ "$real_path" == "$PWD" ]] && break
					
					real_path=${real_path%/*}
				done
		done
	
	declare -p keep PWDS >"$pfs/by_bash_keep"
	}

rm -f "${tmp_ftl_files}"  

return $got_filter
}

ftl_filter()
{
[[ ${PWDS["$tab-$PWD"]} == 1 ]] && 
	{
	while read -r file_data
		do
			fn="${file_data#$'*\t'*$'\t'}"
			[[ ${keep["$tab-$PWD/$fn"]} == 1 ]] && echo "$file_data"
		done
	} || cat 
}

declare -g -A keep PWDS

[[ "$1" == load ]] && { [[ -e "$pfs/by_bash_keep" ]] && source "$pfs/by_bash_keep" ; true ; } || bash_filter_keep_imp

# vim: set filetype=sh :

