
incremental_search() { key_map=incremental_find ; to_search= ; cursor_color="$cursor_color_search" ; list ; }

incremental_find()
{
case "$REPLY" in 
	ENTER|ESCAPE ) cursor_color="$cursor_color0" ; to_search= ; list ; key_map= ;;
	ERROR_142    ) : ;;
	*            ) to_search="$to_search$REPLY" ; find_next
esac
}

bind override find	"/"	incremental_search	"start incremental search, press 'enter' to end"

