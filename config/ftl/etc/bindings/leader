
declare -Ag leader_key_map
leader_key() { key_map=leader_key_map ; }

leader_key_map[t]=leader_test
leader_test() { tmux popup "echo -n ftl: leader_test" ; key_map=ftl_key_map ; }
bind ftl extra	˽˽t	leader_test	"test leader key"

#----------------------------------------------------------------------

leader_key_map[SPACE_KEY]=leader_space
leader_space() { key_map=leader_space_test ; }
leader_space_test() { tmux popup "echo -n ftl: leader + space + \'$REPLY\'" ; key_map=ftl_key_map ; }
bind ftl extra	˽˽?	leader_space_test	"test leader + space + key"

