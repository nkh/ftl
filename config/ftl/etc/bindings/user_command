declare -Ag leader_key_map
leader_key() { key_map=leader_key_map ; }

leader_key_map[u]=leader_user
leader_user() 
{
p=$ftl_cfg/user_commands ; cmd=$(cd $p 2>&- && fd | sed 's/^.\///' | fzf-tmux -p80% --cycle --reverse --info=inline) ; [[ $cmd ]] && . $p/$cmd ; list
key_map=ftl_key_map
}

bind leader_user shell Ë½u run_user_command "chose a user command to run"

