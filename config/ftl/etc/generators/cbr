#!/bin/bash
exec 2>> "$2/generators_log"

n=$(basename "$1")

[[ FORCE == "$3" || ! -f "$2/$n.jpg" ]] && 
	{
	unrar p -ierr -inull -c- "$1" "$(rar lb "$1" \*.jpg \*.png | perl -ne '! /\d\D\..*$/ and print' | sort | head -n1)" > "$2/$n.large.jpg"
	vipsthumbnail --size 600x "$2/$1.large.jpg" -o "$2/$n.jpg"
	rm "$2/$n.large.jpg" 2>&-
	}
