declare -A shortcuts shortcut_to_command
for k in "${!C[@]}"
	do
		{ [[ -n "${LA[${C[$k]}]}" ]]  && shortcuts[$k]="‚áë${LA[${C[$k]}]}/${C[$k]}" ; } ||
		{ [[ -n "${LSA[${C[$k]}]}" ]] && shortcuts[$k]="‚áà${LSA[${C[$k]}]}/${C[$k]}" ; } ||
		                                 shortcuts[$k]="${C[$k]}"
		
		shortcut_to_command[${C[$k]}]="$k"
	done

shortcuts[tab_next]="TAB"
shortcuts[enter]="ENTER"

