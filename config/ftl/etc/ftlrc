declare -A SA=( [a]=¬∫ [b]=‚Äô [c]=¬© [d]=√ê [e]=¬¢ [f]=¬™ [g]=≈ä [h]=ƒ¶ [i]=ƒ± [k]='&' [l]=≈Å [m]=¬∫ [o]=≈í [p]=√û [q]=Œ© [r]=¬Æ [s]=¬ß [t]=√û [u]=‚Üë [v]=‚Äò [x]='>' [y]=¬• [z]='<' ["'"]=√ó [.]=Àô [0]=¬∞ [/]=√∑)
declare -A LSA=([¬∫]=a [‚Äô]=b [¬©]=c [√ê]=d [¬¢]=e [¬™]=f [≈ä]=g [ƒ¶]=h [ƒ±]=i ['&']=k [≈Å]=l [¬∫]=m [≈í]=o [√û]=p [Œ©]=q [¬Æ]=r [¬ß]=s [√û]=t [‚Üë]=u [‚Äò]=v ['>']=x [¬•]=y ['<']=z [√ó]="'" [Àô]=. [¬∞]=0 [√∑]=/)
declare -A A=(  [a]=¬™ [b]=‚Äù [c]=¬© [d]=√∞ [e]=‚Ç¨ [f]=ƒë [g]=≈ã [h]=ƒß [i]=‚Üí [k]=ƒ∏ [l]=≈Ç [m]=¬µ [o]=≈ì [p]=√æ [q]='@' [r]=¬Æ [s]=√ü [t]=√æ [u]=‚Üì [v]=‚Äú [x]=¬ª [y]=‚Üê [z]=¬´ [.]=¬∑ [6]=¬•)
declare -A LA=( [¬™]=a [‚Äù]=b [¬©]=c [√∞]=d [‚Ç¨]=e [ƒë]=f [≈ã]=g [ƒß]=h [‚Üí]=i [ƒ∏]=k [≈Ç]=l [¬µ]=m [≈ì]=o [√æ]=p ['@']=q [¬Æ]=r [√ü]=s [√æ]=t [‚Üì]=u [‚Äú]=v [¬ª]=x [‚Üê]=y [¬´]=z [¬∑]='.' [¬•]=6)

