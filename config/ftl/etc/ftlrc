sort_reversed0=				#default reverse sort order

# Glyphs
sglyph=( ⍺ 🡕 )				# sorting: alphanumeric, size
iglyph=('' ᴵ ᴺ)				# image mode: all, no-image, image
lglyph=('' ᵈ ᶠ)				# preview: all, directory-only, file-only
tglyph=('' ¹ ² ³ D)			# tag classes 

