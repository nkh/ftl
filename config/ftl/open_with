players=$( < <( cat <<EOF
cbr	zathura
cbz	zathura
application/vnd.comicbook-rar	zathura
cbr	mcomix
cbz	mcomix
application/vnd.comicbook-rar	mcomix
EOF
) rg -F -f <(echo -e "$n\n$e\n$mtype"))

[[ "$players" ]] && \
	{
	w=$(echo "$players" | fzf-tmux -0 -1 -p 80% -m --ansi --info=inline | cut -f 2-)
	[[ "$w" ]] && { ($w "$n" &) ; tcpreview ; sleep 0.4 ; true ; }
	} || \
	{
	tmux split-window -l 50% mimeopen "$n"
	}

# vim: set filetype=sh :
